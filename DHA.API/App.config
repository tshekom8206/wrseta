<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>

  <appSettings>
    <!-- API Settings -->
    <add key="ApiVersion" value="1.1.0" />

    <!-- API Key Authentication -->
    <add key="DHAApiKey" value="dha-api-key-2025" />

    <!-- CORS Configuration -->
    <add key="CorsOrigins" value="" />

    <!-- OpenTelemetry Configuration -->
    <add key="TelemetryEnabled" value="true" />
    <add key="OtlpEndpoint" value="http://localhost:4318/v1/traces" />
    <add key="ServiceName" value="DHA.API" />
    <add key="ServiceVersion" value="1.1.0" />

    <!-- DHA Verification Service -->
    <add key="DHAEnabled" value="false" />
    <add key="DHAEndpoint" value="https://api.dha.gov.za/verify" />
    <add key="DHATimeoutMs" value="5000" />
  </appSettings>

  <connectionStrings>
    <!-- DHA Mock Database connection string -->
    <!--
    Common LocalDB connection string formats (try these if default doesn't work):
    1. Data Source=(localdb)\mssqllocaldb;Initial Catalog=DHA;Integrated Security=True;TrustServerCertificate=True
    2. Data Source=(localdb)\MSSQLLocalDB;Initial Catalog=DHA;Integrated Security=True;TrustServerCertificate=True
    3. Data Source=localhost;Initial Catalog=DHA;Integrated Security=True;TrustServerCertificate=True
    4. Data Source=.\SQLEXPRESS;Initial Catalog=DHA;Integrated Security=True;TrustServerCertificate=True

    To start LocalDB manually, run: sqllocaldb start mssqllocaldb
    -->
    <add name="DHAConnection"
         connectionString="Data Source=(localdb)\mssqllocaldb;Initial Catalog=DHA;Integrated Security=True;TrustServerCertificate=True;Connect Timeout=30;MultipleActiveResultSets=True"
         providerName="System.Data.SqlClient" />
  </connectionStrings>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Http" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.9.0" newVersion="5.2.9.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Net.Http.Formatting" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.9.0" newVersion="5.2.9.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.2.2.0" newVersion="4.2.2.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
